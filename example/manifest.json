{
  "manifest_version": 3,
  "name": "Chrome Ext Base Demo",
  "version": "1.0.0",
  "description": "演示Chrome扩展基础库的使用",
  "permissions": ["sidePanel", "activeTab", "storage", "tabs"],
  "side_panel": {
    "default_path": "dist/src/sidepanel.html"
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ],
  "action": {
    "default_title": "Chrome Ext Base Demo"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "打开侧边栏"
    }
  }
}
